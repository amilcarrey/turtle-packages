{
   "name": "@turtledev/earn-widget",
   "version": "0.1.0",
   "description": "Configurable and self-contained Turtle Earn widget for third-party integration",
   "license": "MIT",
   "repository": {
      "type": "git",
      "url": "https://github.com/turtledev/packages.git",
      "directory": "packages/earn-widget"
   },
   "sideEffects": [
      "*.css"
   ],
   "type": "module",
   "exports": {
      ".": {
         "types": "./dist/index.d.ts",
         "import": "./dist/index.js",
         "require": "./dist/index.cjs"
      },
      "./styles.css": "./dist/styles.css"
   },
   "main": "./dist/index.cjs",
   "module": "./dist/index.js",
   "types": "./dist/index.d.ts",
   "scripts": {
      "build": "tsup && bun run build:css",
      "build:css": "bunx @tailwindcss/cli -i ./src/styles/index.css -o ./dist/styles-temp.css && postcss ./dist/styles-temp.css --output ./dist/styles.css && rm ./dist/styles-temp.css",
      "dev": "tsup --watch",
      "preview": "vite preview",
      "type-check": "tsc --noEmit"
   },
   "dependencies": {
      "@turtledev/api": "workspace:*",
      "@turtledev/chains": "workspace:*",
      "@turtledev/hooks": "workspace:*",
      "@turtledev/ui": "workspace:*",
      "@turtledev/utils": "workspace:*",
      "class-variance-authority": "^0.7.1",
      "clsx": "^2.1.1",
      "jotai": "^2.10.5",
      "lucide-react": "^0.523.0",
      "sonner": "^2.0.5"
   },
   "peerDependencies": {
      "react": "^18.0.0",
      "react-dom": "^18.0.0"
   },
   "devDependencies": {
      "@tailwindcss/cli": "^4.1.11",
      "@tailwindcss/vite": "^4.1.11",
      "@types/react": "^18.0.0",
      "@types/react-dom": "^18.0.0",
      "@vitejs/plugin-react": "^4.4.1",
      "postcss": "^8.5.6",
      "postcss-cli": "^11.0.1",
      "postcss-prefixwrap": "^1.55.0",
      "react": "^18.0.0",
      "react-dom": "^18.0.0",
      "tsup": "^8.5.0",
      "typescript": "^5.0.0",
      "vite": "^5.0.0"
   },
   "publishConfig": {
      "access": "public"
   }
}